{
  "name": "generator-create-npm-package",
  "version": "0.1.0",
  "description": "Creates an npm package that is ES6, npm, git, and TDD ready.",
  "homepage": "https://de314.github.io/generator-create-npm-package",
  "author": {
    "name": "David Esposito",
    "email": "david@de314.com",
    "url": "https://github.com/de314"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "",
    "yeoman-generator"
  ],
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-polyfill": "6.26.0",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "generator-git-init": "1.1.3",
    "lodash": "4.17.4",
    "pkginfo": "^0.4.1",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "push:git": "git push && git push --tags",
    "push:npm": "npm run test && npm publish",
    "test": "jest",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 100,
          "semi": false,
          "trailingComma": "es5"
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "de314/generator-create-npm-package",
  "license": "MIT"
}
